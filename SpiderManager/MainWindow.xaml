<Window x:Class="SpiderManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiderManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dg_mainGrid" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Height="229" Width="497">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"/>
                <DataGridTextColumn Header="AnimalID"/>
                <DataGridTextColumn Header="Category"/>
                <DataGridTextColumn Header="Note"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button" Content="Click Me" HorizontalAlignment="Left" Margin="70,28,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
